<fieldset>
    <legend>Create New Category</legend>
    <div class="control-group">
        <label class="control-label" for="name">Name</label>
        <div class="controls">
            <input type="text" name="name" class="input-xlarge" required/>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="viewable">Viewable</label>
        <div class="controls">
            <input type="checkbox" name="viewable"/>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="hassubcategory">Has Subcategories</label>
        <div class="controls">
            <input type="checkbox" name="hassubcategory"/>
        </div>
    </div>
</fieldset>