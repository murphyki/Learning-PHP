{% if STATUS == "success" %}
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ MESSAGES }}
    </div>
{% endif %}

{% if STATUS == "errors" %}
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ MESSAGES }}
    </div>
{% endif %}